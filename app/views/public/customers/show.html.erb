<h5>マイページ</h5>


  <div class = "table">
    <th><strong>登録情報</strong></th>
    <th><%= link_to "編集する", public_customers_edit_path, class: "btn btn-sm btn-success" %></th>
  </div>

<table border="1">

  <tr>
    <th>氏名</th>
    <td><%= @customer.last_name+@customer.first_name %></td>
  </tr>

  <tr>
    <th>カナ</th>
    <td><%= @customer.last_name_kana+@customer.first_name_kana %></td>
  </tr>

  <tr>
    <th>郵便番号</th>
    <td><%= @customer.postal_code %></td>
  </tr>

  <tr>
    <th>住所</th>
    <td><%= @customer.address %></td>
  </tr>

  <tr>
    <th>電話番号</th>
    <td><%= @customer.telephone_number %></td>
  </tr>

  <tr>
    <th>メールアドレス</th>
    <td><%= @customer.email %></td>
  </tr>


</table>

  <div class = "table">
    <th><strong>配送先</strong></th>
    <th><%= link_to "一覧を見る", new_public_order_path, class: "btn btn-sm btn-primary" %> </th>
  </div>

  <div class = "table">
    <th><strong>注文履歴</strong></th>
    <th><%= link_to "一覧を見る", public_addresses_path, class: "btn btn-sm btn-primary" %> </th>
  </div>
