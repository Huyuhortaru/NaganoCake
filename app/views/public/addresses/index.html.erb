
<div class = "col-md-8">

  <h5>配送先登録 / 一覧</h5>

<%= form_with model: @address, url: public_addresses_path(@address) do |f| %>

  <div class = "table">
    <%= f.label "郵便番号(ハイフンなし)" %>
    <%= f.text_field :postal_code %>
  </div>

  <div class = "table">
    <%= f.label "住所" %>
    <%= f.text_field :address, size: 50 %>
  </div>

  <div class = "table">
    <%= f.label "宛名" %>
    <%= f.text_field :name %>
    <%= f.submit "新規登録", class: "btn btn_sm btn-success" %>
  </div>

<% end %>

<table border = "1">
<tr>
  <th>郵便番号</th>
  <th>住所</th>
  <th>宛名</th>
</tr>

<% @addresses.each do |address| %>

  <td><%= address.postal_code %></td>
  <td><%= address.address %></td>
  <td><%= address.name %></td>
  <td><%= link_to "編集する", edit_public_address_path(address.id), class: "btn btn-sm btn-success" %>
      <%= link_to "削除する", public_address_path(address.id), method: :delete, class: "btn btn-sm btn-danger" %></td>

<% end %>

</table>

</div>

