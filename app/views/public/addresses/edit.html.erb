
<div class = "col-md-8">

  <h5>配送先編集</h5>

  <%= form_with model: @address, url: public_address_path(@address) do |f| %>

  <div class = "table">
    <%= f.label "郵便番号(ハイフンなし)" %>
    <%= f.text_field :postal_code %>
  </div>

  <div class = "table">
    <%= f.label "住所" %>
    <%= f.text_field :address, size: 50 %>
  </div>

  <div class = "table">
    <%= f.label "宛名" %>
    <%= f.text_field :name %>
    <%= f.submit "変更内容を保存", class: "btn btn_sm btn-success" %>
  </div>

<% end %>