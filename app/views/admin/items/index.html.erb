  <ul>

    <li><%= link_to '商品一覧', admin_items_path %></li>
    <li><%= link_to '会員一覧', admin_customers_path %></li>
    <li><%= link_to '注文履歴一覧', admin_path %></li>
    <li><%= link_to 'ジャンル一覧', admin_genres_path %></li>
    <li><%= link_to 'ログアウト', destroy_customer_session_path %></li>

  </ul>
  
  <div class="search_box">
    <input type="text" placeholder="Search">
　</div>

  <h5>商品一覧</h5>

  <div class = "col-md-8">

  <table class = "table table-hover table-inverse">
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>


  <% @items.each do |item| %>

    <tr>
      <td><%= item.id %></td>
      <td><%= link_to item.name, admin_item_path(item.id) %></td>
      <td><%= item.price %></td>
      <td><%= item.genre.name %></td>
      <td>
        <% if item.is_active == true %>
          販売中
        <% else %>
          販売停止中
        <% end %>
      </td>
    </tr>

  <% end %>

  </table>
  
  <%= paginate @items %>
  
  </div>