  
  <div class="search_box">
    <input type="text" placeholder="Search">
　</div>

  <h5>商品詳細</h5>


  <%= image_tag @item.get_image(100,100) %>


  <div class = "table">
      <tr>
        <p>商品名 <%= @item.name %></p>
        <p>商品説明 <%= @item.introduction %></p>
        <p>ジャンル <%= @item.genre.name %></p>
        <p>税込価格</p>(税抜価格) <%= @item.price %>(<%= (@item.price / 1.08).ceil %>)円 
        <p>販売ステータス 
        <% if @item.is_active == true %>
          販売中
        <% else %>
          販売停止中
        <% end %></p>
      </tr>
  </div>

  <div class = "table">
    <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn_sm btn-success" %>
  </div>



