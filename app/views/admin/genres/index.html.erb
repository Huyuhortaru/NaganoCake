<h5>ジャンル一覧・追加</h5>

<%= form_with model: @genre,url: admin_genres_path do |f| %>

<div class = "form-group">
    <%= f.label "ジャンル名" %>
    <%= f.text_field :name %>
    <%= f.submit "新規登録", class: "btn btn_sm btn-success" %>
</div>

<% end %>

<div class = "col-md-5">

  <table class = "table table-hover table-inverse">
    <tr colspan = "1">
      <th>ジャンル</th>
    </tr>

    <% @genres.each do |genre| %>

    <tr>
    <th><%= genre.name %></th>
    <th><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn_sm btn-success" %></th>
    </tr>

    <% end %>

  </table>
</div>
