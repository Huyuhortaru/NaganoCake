
　<h5>注文履歴一覧</h5>
　
　<div class = "col-md-8">

  <table class = "table table-hover table-inverse">
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
    
    <% @orders.each do |order| %>
    
    <tr>
      <td><%= link_to order.created_at, admin_order_path(order.id) %></td>
      <td><%= order.name %></td>
      <td><%= order.amount %></td>
      
    <% end %>
      
    <%= form_with model: @order, url: admin_path, method: :patch, local: true do |f| %>
    
      <td>
      <%#= f.select :status, Order.status.keys, class: "order_status" %>
      </td>
      
    <% end %>
     
    </tr>
    
  </table>
  
  <%= paginate @orders %>
  
  </div>